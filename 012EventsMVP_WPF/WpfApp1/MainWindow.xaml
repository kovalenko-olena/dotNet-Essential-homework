<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="448" Width="579">
    <Grid Margin="0,0,23,18">
        <Button x:Name="BtnStart" Content="Запуск" HorizontalAlignment="Left" Margin="79,314,0,0" VerticalAlignment="Top" Height="45" Width="96" Click="BtnStart_Click"/>
        <Button x:Name="BtnStop" Content="Остановка" HorizontalAlignment="Center" Margin="0,314,0,0" VerticalAlignment="Top" Height="45" Width="96" Click="BtnStop_Click"/>
        <Button x:Name="BtnZero" Content="Сброс" HorizontalAlignment="Left" Margin="377,314,0,0" VerticalAlignment="Top" Height="45" Width="96" Click="BtnZero_Click"/>
        <Label x:Name="Label" Content="" HorizontalAlignment="Left" Margin="127,122,0,0" VerticalAlignment="Top" FontSize="36" Width="298" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
